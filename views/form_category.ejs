<!DOCTYPE html>
<html lang="en">
  <%- include('./includes/head.ejs', {title}) -%>
  <body>
    <%- include('./includes/sidebar.ejs') -%>
    <main class="Main">
      <h1 class="Main__heading"><%= title %></h1>
      <form class="Form" action="/" method="post">
        <div class="Form__field">
          <label class="Form__label" for="name">Category Name</label>
          <input
            class="Form__input"
            type="text"
            name="name"
            placeholder="Book, Gadget, etc."
            required
          />
        </div>
        <div class="Form__field">
          <label class="Form__label" for="name">Description</label>
          <textarea
            class="Form__textarea"
            type="text"
            name="description"
            placeholder="A short description"
            required
            rows="4"
          ></textarea>
        </div>

        <button class="Form__button Form__button__submit" type="submit">
          Submit
        </button>
      </form>
    </main>
  </body>
</html>
