<!DOCTYPE html>
<html lang="en">
  <%- include('./includes/head.ejs', {title}) -%>
  <body>
    <%- include('./includes/sidebar.ejs') -%>
    <main class="Main">
      <div class="Main__heading--item">
        <h1 class="Main__heading--item__title"><%= title %></h1>
        <%- include('./includes/category.ejs', {category: category[0].name, URL:
        category[0].URL}) -%>
      </div>
      <p class="Description"><%= description %></p>
      <p class="Price">$ <%= price %></p>
      <p class="Stock"><%= in_stock %> in stock</p>
      <form method="post" action="<%= `${URL}/delete` %>">
        <button class="Button Button--delete" type="submit">Delete</button>
      </form>
      <a class="Back" href="/item"
        ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <title>Back</title>
          <path
            fill="currentColor"
            d="M2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12M18,11H10L13.5,7.5L12.08,6.08L6.16,12L12.08,17.92L13.5,16.5L10,13H18V11Z"
          /></svg
        >Back to All Items</a
      >
    </main>
  </body>
</html>
